function onOpen() { /*M. Anahy Aguilar Gonzalez*/
  var ui = SpreadsheetApp.getUi();
  var menu = ui.createMenu("INFORME");
  menu.addItem("Generar Accion Correctiva uno a uno", "metodos")
      .addToUi();
}

